<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android">


    <include layout="@layout/layout_village_view"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/markers"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/launch_countdown"
            android:layout_above="@+id/google"
            android:layout_marginTop="@dimen/markerPaddingTop"
            android:layout_marginBottom="@dimen/markerPaddingBottom"
            android:scrollbars="none"
            android:overScrollMode="never"/>


    <include layout="@layout/layout_village_misc"/>

    <com.google.android.apps.santatracker.village.SnowFlakeView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/snowFlakeView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

</merge>